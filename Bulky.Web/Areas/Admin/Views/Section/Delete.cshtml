@model Section
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Section";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Section</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="Title" class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <textarea disabled asp-for="Description" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input disabled type="file" name="file" class="form-control border-0 shadow" />
                    <label class="ms-2">Section Image</label>
                </div>

                <div class="form-switch mb-3">
                    <input disabled type="checkbox" asp-for="IsHidden" class="form-check-input" />
                    <label asp-for="IsHidden" class="form-label">Hide Section</label>
                </div>

                <div class="form-switch mb-3">
                    <input disabled type="checkbox" asp-for="IsHomePage" class="form-check-input" />
                    <label asp-for="IsHomePage" class="form-label">Show in Home Page</label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Section"asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


