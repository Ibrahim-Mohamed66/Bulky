@{
    var status = Context.Request.Query["status"].ToString().ToLower();
    var pending = "text-primary";
    var processing = "text-primary";
    var approved = "text-primary";
    var cancelled = "text-primary";
    var all = "text-primary";
    switch (status)
    {
        case "pending":
            pending = "active text-white bg-primary";
            break;
        case "processing":
            processing = "active text-white bg-primary";
            break;
        case "approved":
            approved = "active text-white bg-primary";
            break;
        case "completed":
            cancelled = "active text-white bg-primary";
            break;
        default:
            all = "active text-white bg-primary";
            break;
    }
}
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Order List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="d-flex justify-content-between pb-5 pt-2">
            <span></span>
            <ul class="list-group list-group-horizontal-sm ">
                <a asp-action="Index" asp-controller="Order" asp-route-status="all" class="text-decoration-none">
                <li class="list-group-item @all"> All</li>
                </a>
                <a asp-action="Index" asp-controller="Order" asp-route-status="processing" class="text-decoration-none">
                <li class="list-group-item @processing"> In Process</li>
                </a>
                <a asp-action="Index" asp-controller="Order" asp-route-status="pending" class="text-decoration-none">
                <li class="list-group-item @pending"> Pending</li>
                </a>
                <a asp-action="Index" asp-controller="Order" asp-route-status="approved" class="text-decoration-none">
                <li class="list-group-item @approved"> Approved</li>
                </a>
                <a asp-action="Index" asp-controller="Order" asp-route-status="canelled" class="text-decoration-none">
                <li class="list-group-item @cancelled"> Cancelled </li>
                </a>
            </ul>
        </div>

        <!-- Make table responsive by wrapping inside a div -->
        <div class="table-responsive">
            <table id="order-table" class="table table-bordered text-center table-striped align-middle">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Full Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>
@section Scripts {
    <script src="~/js/order.js"></script>
}