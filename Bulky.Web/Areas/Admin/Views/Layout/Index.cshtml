@model List<Section>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sections";
}

<div class="card shadow border-0 my-3">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Sections List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Layout" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Section
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center align-middle">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Display Order</th>
                        <th>Is Hidden</th>
                        <th>Is In Home Page</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Title</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                @if (obj.IsHidden)
                                {
                                    <span class="badge bg-danger">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">No</span>
                                }
                            </td>
                            <td>
                                @if (obj.IsHomePage)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                        </td>

                        <td>@obj.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @(obj.UpdatedAt.HasValue
                                                        ? obj.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                        : "-")
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Layout" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary rounded mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Layout" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger rounded mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</div>
