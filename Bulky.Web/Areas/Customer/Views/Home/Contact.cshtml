@{
    ViewData["Title"] = "Contact Us";
}

<section class="hero-section">
    <div class="hero-background">
        <img src="@Model.Banner.ImageUrl" alt="Alternate Text" />
        <div class="hero-overlay"></div>
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-75">
                <div class="col-lg-6 text-center">
                    <div class="hero-content">
                        <h1 class="display-4 fw-bold mb-4">Contact Us</h1>
                        <p class="lead mb-4">We'd love to hear from you. Get in touch with our team!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container my-5">
    <div class="row">
        <!-- Contact Information -->
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow">
                <div class="card-body p-4">
                    <h3 class="card-title text-primary mb-4">Get in Touch</h3>
                    
                    <div class="contact-item mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-geo-alt-fill text-primary me-3 fs-4"></i>
                            <h5 class="mb-0">Address</h5>
                        </div>
                        <p class="text-muted ms-5">
                            123 Book Street<br>
                            Literary District<br>
                            Cairo, Egypt 11511
                        </p>
                    </div>

                    <div class="contact-item mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-telephone-fill text-primary me-3 fs-4"></i>
                            <h5 class="mb-0">Phone</h5>
                        </div>
                        <p class="text-muted ms-5">
                            <a href="tel:+201234567890" class="text-decoration-none">+20 123 456 7890</a><br>
                            <a href="tel:+201098765432" class="text-decoration-none">+20 109 876 5432</a>
                        </p>
                    </div>

                    <div class="contact-item mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-envelope-fill text-primary me-3 fs-4"></i>
                            <h5 class="mb-0">Email</h5>
                        </div>
                        <p class="text-muted ms-5">
                            <a href="mailto:info@bulky.com" class="text-decoration-none">info@bulky.com</a><br>
                            <a href="mailto:support@bulky.com" class="text-decoration-none">support@bulky.com</a>
                        </p>
                    </div>

                    <div class="contact-item">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-clock-fill text-primary me-3 fs-4"></i>
                            <h5 class="mb-0">Business Hours</h5>
                        </div>
                        <p class="text-muted ms-5">
                            Sunday - Thursday: 9:00 AM - 6:00 PM<br>
                            Saturday: 10:00 AM - 4:00 PM<br>
                            Sunday: Closed
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow">
                <div class="card-body p-4">
                    <h3 class="card-title text-primary mb-4">Send us a Message</h3>
                    
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0 shadow" id="firstName" name="firstName" required>
                                    <label for="firstName" class="ms-2">First Name</label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0 shadow" id="lastName" name="lastName" required>
                                    <label for="lastName" class="ms-2">Last Name</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input type="email" class="form-control border-0 shadow" id="email" name="email" required>
                                    <label for="email" class="ms-2">Email Address</label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input type="tel" class="form-control border-0 shadow" id="phone" name="phone">
                                    <label for="phone" class="ms-2">Phone Number</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <select class="form-select border-0 shadow" id="subject" name="subject" required>
                                    <option value="">Choose a subject...</option>
                                    <option value="general">General Inquiry</option>
                                    <option value="support">Customer Support</option>
                                    <option value="orders">Order Related</option>
                                    <option value="returns">Returns & Refunds</option>
                                    <option value="partnership">Business Partnership</option>
                                    <option value="other">Other</option>
                                </select>
                                <label for="subject" class="ms-2">Subject</label>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <textarea class="form-control border-0 shadow" id="message" name="message" style="height: 150px" required></textarea>
                                <label for="message" class="ms-2">Your Message</label>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-2"></i>Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Contact Cards -->
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="text-center text-primary mb-4">Quick Contact Options</h3>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow text-center h-100">
                <div class="card-body p-4">
                    <i class="bi bi-chat-dots-fill display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Live Chat</h5>
                    <p class="card-text text-muted">Chat with our support team in real-time for immediate assistance.</p>
                    <button class="btn btn-outline-primary">Start Chat</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow text-center h-100">
                <div class="card-body p-4">
                    <i class="bi bi-question-circle-fill display-4 text-primary mb-3"></i>
                    <h5 class="card-title">FAQ</h5>
                    <p class="card-text text-muted">Find answers to commonly asked questions in our FAQ section.</p>
                    <button class="btn btn-outline-primary">View FAQ</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow text-center h-100">
                <div class="card-body p-4">
                    <i class="bi bi-headset display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Call Support</h5>
                    <p class="card-text text-muted">Speak directly with our customer service representatives.</p>
                    <a href="tel:+201234567890" class="btn btn-outline-primary">Call Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Social Media -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow bg-light">
                <div class="card-body p-5 text-center">
                    <h3 class="card-title text-primary mb-4">Follow Us</h3>
                    <p class="lead mb-4">Stay connected with us on social media for updates, offers, and book recommendations!</p>
                    <div class="social-links">
                        <a href="#" class="btn btn-outline-primary btn-lg me-3 mb-2">
                            <i class="bi bi-facebook me-2"></i>Facebook
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-lg me-3 mb-2">
                            <i class="bi bi-twitter me-2"></i>Twitter
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-lg me-3 mb-2">
                            <i class="bi bi-instagram me-2"></i>Instagram
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-lg mb-2">
                            <i class="bi bi-linkedin me-2"></i>LinkedIn
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('contactForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(this);
        const firstName = formData.get('firstName');
        const lastName = formData.get('lastName');
        const email = formData.get('email');
        const subject = formData.get('subject');
        const message = formData.get('message');
        
        // Simple validation
        if (!firstName || !lastName || !email || !subject || !message) {
            toastr.error('Please fill in all required fields.');
            return;
        }
        
        // Simulate form submission
        toastr.success('Thank you for your message! We will get back to you soon.');
        this.reset();
    });
</script>

<style>
    .contact-item {
        transition: transform 0.3s ease;
    }

    .contact-item:hover {
        transform: translateX(5px);
    }

    .social-links a {
        transition: all 0.3s ease;
    }

    .social-links a:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    #contactForm .form-control:focus,
    #contactForm .form-select:focus {
        border-color: #192E2F;
        box-shadow: 0 0 0 0.2rem rgba(25, 46, 47, 0.25);
    }
</style>
