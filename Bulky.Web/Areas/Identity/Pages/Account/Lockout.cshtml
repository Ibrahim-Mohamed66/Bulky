@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}

<section class="status-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="status-card card shadow border-0">
                    <div class="card-body p-4 p-md-5 text-center">
                        <div class="status-icon mx-auto mb-4" style="background: rgba(220, 53, 69, 0.1); color: #dc3545;">
                            <i class="bi bi-lock"></i>
                        </div>
                        <h1 class="h3 mb-3 text-danger">Account Locked</h1>
                        <p class="text-muted mb-4">
                            This account has been temporarily locked due to multiple failed sign-in attempts. Please try again later or contact support if you need assistance.
                        </p>
                        <div class="status-actions">
                            <a asp-page="./Login" class="btn btn-primary px-4">
                                <i class="bi bi-arrow-left me-2"></i>Back to Sign In
                            </a>
                            <a asp-page="./ForgotPassword" class="btn btn-outline-secondary px-4 ms-2">
                                <i class="bi bi-key me-2"></i>Reset Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
