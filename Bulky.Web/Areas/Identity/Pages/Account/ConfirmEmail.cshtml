@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<section class="status-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="status-card card shadow border-0">
                    <div class="card-body p-4 p-md-5 text-center">
                        <div class="status-icon mx-auto mb-4" style="background: rgba(25, 46, 47, 0.1); color: #192E2F;">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <h1 class="h3 mb-3" style="color: #192E2F;">Email Confirmed</h1>
                        <partial name="_StatusMessage" model="Model.StatusMessage" />
                        <p class="text-muted mb-4">Your email address has been successfully confirmed. You can now access all features of your Bulky account.</p>
                        <div class="status-actions">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
                                <i class="bi bi-house me-2"></i>Go to Homepage
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
