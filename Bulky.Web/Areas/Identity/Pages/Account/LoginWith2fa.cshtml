@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<section class="auth-section py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="auth-hero">
                    <h1 class="brand-title mb-3">Secure Access</h1>
                    <p class="lead text-white-50 mb-4">Your account is protected with two-factor authentication for enhanced security.</p>
                    <ul class="auth-benefits">
                        <li>Enhanced account security</li>
                        <li>Protection against unauthorized access</li>
                        <li>Peace of mind shopping</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-6 col-xl-5 col-md-10 mx-auto">
                <div class="auth-card card shadow border-0">
                    <div class="card-body p-4 p-md-5">
                        <h2 class="mb-1">Two-Factor Authentication</h2>
                        <p class="text-muted mb-4">Enter the verification code from your authenticator app</p>

                        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                            <input asp-for="RememberMe" type="hidden" />
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" placeholder="000000" />
                                <label asp-for="Input.TwoFactorCode" class="form-label">Authenticator Code</label>
                                <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                                <div class="form-text">Enter the 6-digit code from your authenticator app.</div>
                            </div>
                            
                            <div class="form-check mb-3">
                                <input asp-for="Input.RememberMachine" class="form-check-input" />
                                <label asp-for="Input.RememberMachine" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMachine)
                                </label>
                            </div>
                            
                            <button type="submit" class="w-100 btn btn-lg btn-primary mb-3">
                                <i class="bi bi-shield-check me-2"></i>Verify & Sign In
                            </button>

                            <div class="text-center small">
                                Can't access your authenticator? 
                                <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">
                                    Use a recovery code
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}