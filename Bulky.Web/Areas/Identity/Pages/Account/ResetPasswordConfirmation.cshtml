@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<section class="status-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="status-card card shadow border-0">
                    <div class="card-body p-4 p-md-5 text-center">
                        <div class="status-icon mx-auto mb-4" style="background: rgba(25, 46, 47, 0.1); color: #192E2F;">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h1 class="h3 mb-3" style="color: #192E2F;">Password Reset Successfully</h1>
                        <p class="text-muted mb-4">
                            Your password has been successfully reset. You can now sign in to your <span class="text-gradient fw-bold">Bulky</span> account with your new password.
                        </p>
                        <div class="status-actions">
                            <a asp-page="./Login" class="btn btn-primary px-4">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
