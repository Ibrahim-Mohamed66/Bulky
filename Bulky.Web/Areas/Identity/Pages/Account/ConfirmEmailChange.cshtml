@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "Confirm email change";
}

<section class="status-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="status-card card shadow border-0">
                    <div class="card-body p-4 p-md-5 text-center">
                        <div class="status-icon mx-auto mb-4" style="background: rgba(25, 46, 47, 0.1); color: #192E2F;">
                            <i class="bi bi-envelope-check"></i>
                        </div>
                        <h1 class="h3 mb-3" style="color: #192E2F;">Email Change Confirmed</h1>
                        <partial name="_StatusMessage" model="Model.StatusMessage" />
                        <p class="text-muted mb-4">
                            Your email address has been successfully updated. You can now use your new email address to sign in to your <span class="text-gradient fw-bold">Bulky</span> account.
                        </p>
                        <div class="status-actions">
                            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-primary px-4">
                                <i class="bi bi-person-circle me-2"></i>Go to Profile
                            </a>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                                <i class="bi bi-house me-2"></i>Homepage
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
