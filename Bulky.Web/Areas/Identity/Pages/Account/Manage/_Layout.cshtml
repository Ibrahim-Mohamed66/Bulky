@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<section class="manage-section py-4">
    <div class="container">
        <div class="row">
            <div class="col-12 mb-3">
                <h1 class="h3 mb-1">Manage your account</h1>
                <p class="text-muted">Change your account settings</p>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-4 mb-md-0">
                <div class="manage-nav card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <partial name="_ManageNav" />
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="manage-card card border-0 shadow-sm">
                    <div class="card-body p-3 p-md-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
