@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<section class="status-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="status-card card shadow border-0">
                    <div class="card-body p-4 p-md-5 text-center">
                        @{
                            if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <div class="status-icon mx-auto mb-4" style="background: rgba(25, 46, 47, 0.1); color: #192E2F;">
                                    <i class="bi bi-box-arrow-right"></i>
                                </div>
                                <h1 class="h3 mb-3" style="color: #192E2F;">Sign Out</h1>
                                <p class="text-muted mb-4">
                                    Are you sure you want to sign out of your <span class="text-gradient fw-bold">Bulky</span> account?
                                </p>
                                <div class="status-actions">
                                    <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                        <button type="submit" class="btn btn-primary px-4">
                                            <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                                        </button>
                                    </form>
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                                        <i class="bi bi-arrow-left me-2"></i>Cancel
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="status-icon mx-auto mb-4" style="background: rgba(25, 46, 47, 0.1); color: #192E2F;">
                                    <i class="bi bi-check-circle"></i>
                                </div>
                                <h1 class="h3 mb-3" style="color: #192E2F;">Successfully Signed Out</h1>
                                <p class="text-muted mb-4">
                                    You have successfully signed out of your <span class="text-gradient fw-bold">Bulky</span> account. Thank you for visiting!
                                </p>
                                <div class="status-actions">
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
                                        <i class="bi bi-house me-2"></i>Continue Shopping
                                    </a>
                                    <a asp-page="./Login" class="btn btn-outline-secondary px-4 ms-2">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In Again
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
