@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<section class="auth-section py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="auth-hero">
                    <h1 class="brand-title mb-3">Recovery Access</h1>
                    <p class="lead text-white-50 mb-4">Use your backup recovery code to access your <span class="text-gradient">Bulky</span> account.</p>
                    <ul class="auth-benefits">
                        <li>Secure backup authentication</li>
                        <li>Access when device unavailable</li>
                        <li>Account recovery option</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-6 col-xl-5 col-md-10 mx-auto">
                <div class="auth-card card shadow border-0">
                    <div class="card-body p-4 p-md-5">
                        <h2 class="mb-1">Recovery Code</h2>
                        <p class="text-muted mb-3">Enter one of your backup recovery codes</p>

                        <div class="alert alert-info border-0 mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            This login will not be remembered until you provide an authenticator app code at login or disable 2FA.
                        </div>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            
                            <div class="form-floating mb-4">
                                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Enter recovery code" />
                                <label asp-for="Input.RecoveryCode" class="form-label">Recovery Code</label>
                                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                                <div class="form-text">Enter one of your saved recovery codes.</div>
                            </div>
                            
                            <button type="submit" class="w-100 btn btn-lg btn-primary mb-3">
                                <i class="bi bi-key me-2"></i>Sign In with Recovery Code
                            </button>

                            <div class="text-center small">
                                <a asp-page="./LoginWith2fa">Back to authenticator</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}