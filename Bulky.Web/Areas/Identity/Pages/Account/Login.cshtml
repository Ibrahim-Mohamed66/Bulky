@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewData["HideNav"] = true;
}

<section class="auth-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <!-- Hero / Brand Side -->
            <div class="col-lg-6 d-none d-lg-block">
                <div class="auth-hero">
                    <h1 class="brand-title mb-3">Welcome back to <span class="text-gradient">Bulky</span></h1>
                    <p class="lead text-white-50 mb-4">Your trusted bookstore for bestsellers, classics, and everything in between.</p>
                    <ul class="auth-benefits">
                        <li>Exclusive member discounts</li>
                        <li>Save favorites and track orders</li>
                        <li>Fast, secure checkout</li>
                    </ul>
                </div>
            </div>

            <!-- Form Side -->
            <div class="col-lg-6 col-xl-5 col-md-10 mx-auto">
                <div class="auth-card card shadow border-0">
                    <div class="card-body p-4 p-md-5">
                        <h2 class="mb-1">Sign in</h2>
                        <p class="text-muted mb-4">Access your Bulky account</p>

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                                </div>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="small">Forgot your password?</a>
                            </div>

                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Log in</button>

                            <div class="text-center small">
                                Don't have an account?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create one</a>
                            </div>
                        </form>

                        @* External providers *@
                        <div class="mt-4 external-login-section">
                            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <hr />
                                <p class="text-muted mb-3 text-center">Or continue with</p>
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="external-login-container">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        string btnClass = "external-login-btn";
                                        string icon = "fas fa-user";

                                        switch (provider.Name?.ToLower() ?? string.Empty)
                                        {
                                            case "google":
                                                btnClass += " btn-google";
                                                icon = "fab fa-google";
                                                break;
                                            case "facebook":
                                                btnClass += " btn-facebook";
                                                icon = "fab fa-facebook-f";
                                                break;
                                            case "microsoft":
                                                btnClass += " btn-microsoft";
                                                icon = "fab fa-microsoft";
                                                break;
                                            case "github":
                                                btnClass += " btn-github";
                                                icon = "fab fa-github";
                                                break;
                                            case "twitter":
                                                btnClass += " btn-twitter";
                                                icon = "fab fa-twitter";
                                                break;
                                            default:
                                                btnClass += " btn-outline-primary";
                                                break;
                                        }
                                        <button type="submit" class="@btnClass" name="provider" value="@provider.Name"
                                                title="Log in using your @provider.DisplayName account">
                                            <i class="@icon"></i>
                                            <span>@provider.DisplayName</span>
                                        </button>
                                    }
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
