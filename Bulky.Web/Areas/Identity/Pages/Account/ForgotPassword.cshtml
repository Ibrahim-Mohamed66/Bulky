@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="auth-section py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="auth-hero">
                    <h1 class="brand-title mb-3">Forgot your password?</h1>
                    <p class="lead text-white-50 mb-4">Enter your email address and we'll send you a link to reset your password.</p>
                </div>
            </div>

            <div class="col-lg-6 col-xl-5 col-md-10 mx-auto">
                <div class="auth-card card shadow border-0">
                    <div class="card-body p-4 p-md-5">
                        <h2 class="mb-1">Reset password</h2>
                        <p class="text-muted mb-4">We will send a reset link to your email</p>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <button type="submit" class="w-100 btn btn-lg btn-primary mb-3">Send reset link</button>

                            <div class="text-center small">
                                Remembered your password? <a asp-page="./Login">Back to login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
