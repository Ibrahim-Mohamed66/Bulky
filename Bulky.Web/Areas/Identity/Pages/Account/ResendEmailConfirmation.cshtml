@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<section class="auth-section py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="auth-hero">
                    <h1 class="brand-title mb-3">Resend Confirmation</h1>
                    <p class="lead text-white-50 mb-4">Didn't receive your email confirmation? We'll send you a new one.</p>
                    <ul class="auth-benefits">
                        <li>Verify your email address</li>
                        <li>Secure your account</li>
                        <li>Access all features</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-6 col-xl-5 col-md-10 mx-auto">
                <div class="auth-card card shadow border-0">
                    <div class="card-body p-4 p-md-5">
                        <h2 class="mb-1">Resend Confirmation</h2>
                        <p class="text-muted mb-4">Enter your email to receive a new confirmation link</p>

                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>
                            
                            <div class="form-floating mb-4">
                                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                <div class="form-text">We'll send a confirmation link to this email address.</div>
                            </div>
                            
                            <button type="submit" class="w-100 btn btn-lg btn-primary mb-3">
                                <i class="bi bi-envelope-paper me-2"></i>Resend Confirmation
                            </button>

                            <div class="text-center small">
                                Already confirmed? <a asp-page="./Login">Sign in here</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
